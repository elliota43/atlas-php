{
    "name": "elliota43/atlas",
    "description": "Declarative SQL Schema Management for PHP using Attributes",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Atlas\\": "src/"
        }
    },
    "require": {
        "php": "^8.2",
        "symfony/console": "^7.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit tests/Unit/",
        "test:integration": "phpunit tests/Integration/",
        "test:coverage": "phpunit --coverage-html coverage/"
    }
}
